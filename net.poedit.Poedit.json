{
    "app-id": "net.poedit.Poedit",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "poedit",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--filesystem=home",
        /* LibSecret*/
        "--talk-name=org.freedesktop.secrets",
        /* Network */
        "--share=network",
        /* Dconf */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "wxWidgets",
            "rm-configure": true,
            "config-opts": [
                "--with-gtk=3",
                "--disable-sdltest",
                "--enable-webkit",
                "--enable-webview",
                "--enable-debug",
                "--with-cxx=14",
                "--enable-stl",
                "--enable-webviewwebkit"
            ],
            "sources": [{
                    "type": "archive",
                    "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.4/wxWidgets-3.1.4.tar.bz2",
                    "sha256": "3ca3a19a14b407d0cdda507a7930c2e84ae1c8e74f946e0144d2fa7d881f1a94"
                },
                {
                    "type": "shell",
                    "commands": [
                        "cp -p /usr/share/automake-*/config.{sub,guess} .",
                        "autoconf -f -B build/autoconf_prepend-include"
                    ]
                }
            ]
        },
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh",
                "./b2 install --prefix=/app --with-filesystem --with-date_time --with-regex --with-thread --with-system --with-random --with-iostreams --with-chrono --with-atomic define=\"BOOST_SYSTEM_NO_DEPRECATED\" -sNO_BZIP2=1 cxxflags=-fPIC cflags=-fPIC"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://boostorg.jfrog.io/artifactory/main/release/1.69.0/source/boost_1_69_0.tar.gz",
                "sha256": "9a2c2819310839ea373f42d69e733c339b4e9a19deab6bfec448281554aa4dbb"
            }]
        },
        {
            "name": "lucene++",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "config-opts": [
                    "-DCMAKE_CXX_FLAGS='-DBOOST_VARIANT_USE_RELAXED_GET_BY_DEFAULT'",
                    "-DENABLE_DEMO=OFF",
                    "-DENABLE_TEST=OFF"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/luceneplusplus/LucenePlusPlus/archive/rel_3.0.7.tar.gz",
                "sha256": "6c19f203311e4b44a0ccf7b1127db77436eb47159ea1c54f7531a0b1ca585e0c"
            }]
        },
        {
            "name": "gtkspell",
            "modules": [{
                "name": "enchant",
                "sources": [{
                    "type": "archive",
                    "url": "https://github.com/AbiWord/enchant/releases/download/v2.3.2/enchant-2.3.2.tar.gz",
                    "sha256": "ce9ba47fd4d34031bd69445598a698a6611602b2b0e91d705e91a6f5099ead6e"
                }]
            }],
            "cleanup": ["*.la", "/share/gtk-doc"],
            "sources": [{
                "type": "archive",
                "url": "https://sourceforge.net/projects/gtkspell/files/3.0.10/gtkspell3-3.0.10.tar.xz",
                "sha256": "b040f63836b347eb344f5542443dc254621805072f7141d49c067ecb5a375732"
            }]
        },
        {
            "name": "gettext",
            "sources": [{
                "type": "archive",
                "url": "https://ftp.gnu.org/pub/gnu/gettext/gettext-0.21.tar.gz",
                "sha256": "c77d0da3102aec9c07f43671e60611ebff89a996ef159497ce8e59d075786b12"
            }]
        },
        {
            "name": "cpprestsdk",
            "buildsystem": "cmake-ninja",
            "subdir": "Release",
            "modules": [{
                "name": "websocketcpp",
                "buildsystem": "cmake-ninja",
                "sources": [{
                    "type": "archive",
                    "url": "https://github.com/zaphoyd/websocketpp/archive/0.8.2.tar.gz",
                    "sha256": "6ce889d85ecdc2d8fa07408d6787e7352510750daa66b5ad44aacb47bea76755"
                }]
            }],
            /* -Wno-format-truncation reported upstream issue #978 */
            "build-options": {
                "config-opts": [
                    "-DCMAKE_CXX_FLAGS='-Wno-format-truncation'",
                    "-DCMAKE_BUILD_TYPE=Release",
                    "-DBUILD_TESTS=OFF",
                    "-DBUILD_SAMPLES=OFF",
                    "-DCPPREST_EXCLUDE_WEBSOCKETS=OFF"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/microsoft/cpprestsdk/archive/refs/tags/2.10.18.tar.gz",
                "sha256": "6bd74a637ff182144b6a4271227ea8b6b3ea92389f88b25b215e6f94fd4d41cb"
            }]
        },
        {
            "name": "cld2",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "config-opts": [
                    "-DCMAKE_BUILD_TYPE=Release",
                    "-DCMAKE_CXX_FLAGS='-std=c++98'"
                ]
            },
            "sources": [{
                "type": "git",
                "url": "https://github.com/CLD2Owners/cld2.git",
                "commit": "b56fa78a2fe44ac2851bae5bf4f4693a0644da7b"
            }, {
                "type": "patch",
                "path": "cld2-add-cmake-file.patch"
            }]
        },
        {
            "name": "poedit",
            "config-opts": [
                "--with-boost-libdir=/app/lib",
                "--with-cld2"
            ],
            /* Required for finding cld2, which is not properly installed */
            "build-options" : {
                "cppflags": "-I/app/include",
                "ldflags": "-L/app/lib"
            },
            "sources": [{
                    "type": "archive",
                    "url": "https://github.com/vslavik/poedit/releases/download/v3.1.1-oss/poedit-3.1.1.tar.gz",
                    "sha256": "8b918a907773cda3fb450e247f3fabec2e221165eab933f1c1269ffc3863a204"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }
            ],
            "post-install": [
                /* Export PoEdit URI handler under allowed name */
                "mv /app/share/applications/net.poedit.PoeditURI.desktop /app/share/applications/net.poedit.Poedit.URI.desktop"
            ]
        }
    ]
}
